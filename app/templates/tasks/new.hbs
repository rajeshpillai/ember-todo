<form>
  <div class="{{if errors "has-error"}}">
    <label>Title</label>
    {{input type="text" class="form-control" value=title placeholder="Add task..."}}
    <span class="">{{errors}}</span>
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{date-field value=date placeholder='YYYY-MM-DD'}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea type="text" class="form-control" value=description placeholder="Describe task..."}}
  </div>
  <button {{action 'addTask'}}class="btn btn-primary">Submit</button>

</form>
